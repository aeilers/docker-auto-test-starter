{
  "name": "docker-auto-test-starter",
  "version": "2.0.0",
  "description": "Starter kit for js-auto-test implementations in Docker",
  "main": "gulpfile.babel.js",
  "scripts": {
    "auto-test:init": "NODE_ENV=development xvfb-run --server-args='-screen 0 1280x1024x24' chromedriver --port=9515 --log-path=/dev/stdout",
    "auto-test:run": "protractor ./conf/config.js",
    "prebuild": "del dist",
    "build": "babel src --out-dir dist",
    "coverage": "NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "dev": "npm run auto-test:init & nodemon -e js,json -w src -w conf -x \"npm run start:dev\" & nodemon -e js -w tst -x \"npm test\"",
    "fix": "standard --fix",
    "prerelease": "del test.tar.gz",
    "release": "NODE_ENV=production npm run build && node ./bin/compress",
    "start": "NODE_ENV=production bash ./bin/test",
    "start:dev": "NODE_ENV=development npm run build && npm run auto-test:run",
    "pretest": "del coverage coverage.lcov .nyc_output",
    "test": "standard",
    "posttest": "NODE_ENV=test nyc --reporter=html --reporter=text mocha tst --recursive --exit",
    "version": "npm run release && git add --all",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aeilers/docker-auto-test-starter.git"
  },
  "bugs": {
    "url": "https://github.com/aeilers/docker-auto-test-starter/issues"
  },
  "homepage": "https://github.com/aeilers/docker-auto-test-starter#readme",
  "author": "Adam Eilers <adam.eilers@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "dependencies": {
    "js-auto-test": "~2.0.1",
    "mocha": "~4.0.1",
    "protractor": "~5.1.2"
  },
  "devDependencies": {
    "archiver": "~2.1.0",
    "babel-cli": "~6.26.0",
    "babel-core": "~6.26.0",
    "babel-eslint": "~8.0.1",
    "babel-plugin-add-module-exports": "~0.2.1",
    "babel-plugin-istanbul": "~4.1.5",
    "babel-plugin-transform-class-properties": "~6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "~6.26.0",
    "babel-register": "~6.26.0",
    "chai": "~4.1.2",
    "chai-as-promised": "~7.1.1",
    "codecov": "~2.3.1",
    "del-cli": "~1.1.0",
    "dirty-chai": "~2.0.1",
    "nodemon": "~1.12.1",
    "nyc": "~11.2.1",
    "proxyquire": "~1.8.0",
    "sinon": "~4.0.1",
    "standard": "~10.0.3"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "watermarks": {
      "lines": [
        80,
        90
      ],
      "functions": [
        80,
        90
      ],
      "branches": [
        80,
        90
      ],
      "statements": [
        80,
        90
      ]
    },
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
